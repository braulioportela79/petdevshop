{{>partials/header}}

{{#banner}}
<section
  class="banner"
  style="background-image: url('images/{{ background }}')"
>
  {{ title }}
</section>
<h2>{{ title }} available for adoption</h2>
{{/banner}}

<div class="container list">
  {{#list}}
  <div class="item">
    <img src="images/{{ image }}" class="item--image" />
    <div class="item--name">{{ name }}</div>
    <div class="item--color">Color: {{ color }}</div>
    <div class="item--gender">Gender: {{ gender }}</div>
  </div>
  {{/list}}
</div>

{{>partials/footer}}
